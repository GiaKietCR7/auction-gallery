<%- include('partials/head', { title: 'Sign in' }) %>

<div class="max-w-2xl mx-auto py-10">
  <h1 class="font-serif text-4xl mb-6">Sign in</h1>

  <% if (typeof it !== 'undefined' && it.error) { %>
    <div class="mb-4 px-4 py-3 rounded-lg bg-red-50 text-red-700 border border-red-200">
      <%= it.error %>
    </div>
  <% } %>

  <form method="post" action="/login" class="space-y-4">
    <div>
      <label class="block text-sm mb-1">Email</label>
      <input
        class="border rounded-full px-4 py-2 w-full"
        type="email"
        name="email"
        value="<%= (typeof it !== 'undefined' && it.email) ? it.email : '' %>"
        required
      />
    </div>

    <div>
      <label class="block text-sm mb-1">Password</label>
      <input
        class="border rounded-full px-4 py-2 w-full"
        type="password"
        name="password"
        required
      />
    </div>

    <button class="bg-ink text-white px-5 py-2 rounded-full">Sign in</button>
  </form>
</div>

<%- include('partials/foot') %>
