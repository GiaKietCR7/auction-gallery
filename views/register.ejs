<%- include('partials/head', { title: 'Đăng ký' }) %>

<h1 class="font-serif text-3xl mb-6">Đăng ký</h1>

<form action="/register" method="POST" class="max-w-sm space-y-3">
  <label class="block">
    <span class="text-sm">Tên hiển thị</span>
    <input type="text" name="display_name" placeholder="Tên của bạn"
           class="border rounded-full px-4 py-2 w-full text-[14px]" />
  </label>

  <label class="block">
    <span class="text-sm">Email</span>
    <input type="email" name="email" required
           class="border rounded-full px-4 py-2 w-full text-[14px]" />
  </label>

  <label class="block">
    <span class="text-sm">Mật khẩu</span>
    <input type="password" name="password" required minlength="6"
           class="border rounded-full px-4 py-2 w-full text-[14px]" />
  </label>

  <button class="bg-ink text-white px-5 py-2 rounded-full text-[14px]">
    Tạo tài khoản
  </button>
</form>

<%- include('partials/foot') %>
