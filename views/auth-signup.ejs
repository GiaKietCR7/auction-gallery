<%- include('partials/head', { title:'Đăng ký' }) %>
<div class="max-w-md mx-auto">
  <h1 class="font-serif text-3xl mb-6">Tạo tài khoản</h1>
  <form action="/signup" method="POST" class="space-y-4">
    <div><label class="block text-sm">Họ tên</label><input name="display_name" required class="border rounded-full px-4 py-2 w-full"></div>
    <div><label class="block text-sm">Email</label><input name="email" type="email" required class="border rounded-full px-4 py-2 w-full"></div>
    <div><label class="block text-sm">Mật khẩu</label><input name="password" type="password" required class="border rounded-full px-4 py-2 w-full"></div>
    <button class="bg-ink text-white px-5 py-2 rounded-full">Đăng ký</button>
  </form>
  <p class="mt-4 text-sm">Đã có tài khoản? <a class="link" href="/login">Đăng nhập</a></p>
</div>
<%- include('partials/foot') %>
